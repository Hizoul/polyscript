{
  "name": "isofw-electron",
  "version": "1.0.1",
  "main": "isoelectron.js",
  "license": "AGPL-3.0",
  "scripts": {
    "start": "npm run compile && NODE_PATH=$NODE_PATH:./dist:./ ./node_modules/.bin/electron dist/isoelectron.js",
    "dev": "../ci/node_modules/.bin/nodemon -e ts,tsx --watch src --watch ../isofw-shared/src --watch ../isofw-web/src --exec 'npm run start'",
    "build": "rm -rf isofw-electron-* dist && npm run compile && cp -r node_modules dist && cp package.json dist && mkdir -p dist/isofw-web && cp -r ../isofw-web/webpackDist dist/isofw-web",
    "packageLinux": "./node_modules/.bin/electron-packager dist isofw --platform=linux --arch=all",
    "packageMac": "./node_modules/.bin/electron-packager dist isofw --platform=darwin --arch=all",
    "packageWindows": "./node_modules/.bin/electron-packager dist isofw --platform=win32 --arch=all",
    "compile": "cd ../isofw-web && npm run buildElectron",
    "postPackage": "rm -rf dist/node_modules dist/package.json"
  },
  "dependencies": {
    "electron": "^3.0.8",
    "body-parser": "^1.18.3",
    "feathers": "^2.2.4",
    "feathers-authentication": "^1.3.1",
    "feathers-authentication-jwt": "^0.3.2",
    "feathers-authentication-local": "^0.4.4",
    "feathers-hooks": "^2.1.2",
    "feathers-memory": "^2.2.0",
    "feathers-rest": "^1.8.1",
    "feathers-socketio": "^2.0.1",
    "preact": "^8.3.1",
    "preact-compat": "^3.18.4"
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "electron-packager": "^12.2.0",
    "ts-jest": "^23.10.4",
    "typescript": "^3.1.6"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleNameMapper": {
      "isofw-node(.*)": "<rootDir>/../isofw-node$1",
      "isofw-shared(.*)": "<rootDir>/../isofw-shared$1",
      "isofw-web(.*)": "<rootDir>/../isofw-web$1"
    },
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/",
      "<rootDir>/lib",
      "<rootDir>/dist"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
