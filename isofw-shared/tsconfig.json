{

  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
        "*": ["*", "../*"]
    },
    "typeRoots": [
      "@types",
      "./@types",
      "./src/@types",
      "node_modules/@types",
      "../isofw-node/node_modules/@types",
      "../isofw-node/src/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "src/testUtil/**/*.ts",
    "src/testUtil/**/*.tsx",
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "types": [
    "typePatches"
  ]
}
